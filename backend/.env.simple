# 簡化開發環境配置 - 使用內存數據庫
NODE_ENV=development

# 應用程式設定
PORT=3004

# 使用內存數據庫模式
USE_MOCK_DATA=false
USE_MEMORY_DB=true

# JWT 設定
JWT_SECRET=dev_jwt_secret_key_at_least_32_characters_long_for_security
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev_refresh_secret_key_at_least_32_characters_long_for_security
JWT_REFRESH_EXPIRES_IN=7d

# 檔案上傳設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# CORS 設定
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 安全設定
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 日誌設定
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# 監控設定
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true