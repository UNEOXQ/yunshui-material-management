# 測試環境配置
NODE_ENV=test

# 應用程式設定
PORT=3002

# 資料庫設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yun_shui_materials_test
DB_USER=postgres
DB_PASSWORD=test_password
DB_SSL=false
DB_POOL_MIN=1
DB_POOL_MAX=3

# Redis 設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# JWT 設定
JWT_SECRET=test_jwt_secret_key_at_least_32_characters_long_for_testing
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test_refresh_secret_key_at_least_32_characters_long_for_testing
JWT_REFRESH_EXPIRES_IN=1d

# 檔案上傳設定
UPLOAD_PATH=./test_uploads
MAX_FILE_SIZE=1048576
ALLOWED_FILE_TYPES=image/jpeg,image/png

# CORS 設定
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 安全設定
BCRYPT_ROUNDS=4
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# 日誌設定
LOG_LEVEL=error
LOG_FILE_PATH=./test_logs

# 監控設定
HEALTH_CHECK_INTERVAL=10000
METRICS_ENABLED=false