# 開發環境配置
NODE_ENV=development

# 應用程式設定
PORT=3004

# 模擬資料模式 (當沒有資料庫時使用)
USE_MOCK_DATA=true

# 資料庫設定
DB_HOST=localhost
DB_PORT=5432
DB_NAME=yun_shui_materials_dev
DB_USER=postgres
DB_PASSWORD=dev_password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=5

# Redis 設定
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 設定
JWT_SECRET=dev_jwt_secret_key_at_least_32_characters_long_for_security
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev_refresh_secret_key_at_least_32_characters_long_for_security
JWT_REFRESH_EXPIRES_IN=7d

# 檔案上傳設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp
BASE_URL=http://localhost:3004

# CORS 設定
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# 安全設定
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# 日誌設定
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# 監控設定
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true