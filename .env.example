# 應用程式環境
NODE_ENV=production

# 資料庫設定
DB_HOST=database
DB_PORT=5432
DB_NAME=yun_shui_materials
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Redis 設定
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT 設定
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# 檔案上傳設定
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# CORS 設定
CORS_ORIGIN=http://localhost:3000

# 服務端口
FRONTEND_PORT=80
BACKEND_PORT=3001

# 前端環境變數
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=http://localhost:3001